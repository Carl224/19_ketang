<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FF">

    <RelativeLayout
        android:id="@+id/forgetpaw_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/fergetpaw_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/guanbiyemian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/br1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/forgetpaw_top"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br1"
        android:layout_marginTop="@dimen/dp_15">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="请输入你的手机号"
            android:inputType="number"
            android:maxLength="11"
            android:padding="@dimen/dp_18" />

        <Button
            android:id="@+id/get_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/get_verification_code"
            android:clickable="true"
            android:enabled="false"
            android:padding="@dimen/dp_6"
            android:text="  获取验证码  "
            android:textColor="#ffffff" />
    </RelativeLayout>


    <View
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rll"
        android:background="#E3E3E3" />


    <EditText
        android:id="@+id/liuweishu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b2"
        android:background="#ffffff"
        android:hint="请输入你的验证码"
        android:inputType="number"
        android:padding="@dimen/dp_18" />

    <Button
        android:id="@+id/but_denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liuweishu"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/code_denglu"
        android:enabled="false"
        android:text="下一步"
        android:textColor="#ffffff" />
</RelativeLayout>
