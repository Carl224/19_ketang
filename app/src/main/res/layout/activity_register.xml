<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FF">

    <RelativeLayout
        android:id="@+id/register_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/guanbiyemian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#000000"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            android:text="注册" />
    </RelativeLayout>

    <View
        android:id="@+id/br1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/register_top"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br1"
        android:layout_marginTop="@dimen/dp_15">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="手机号"
            android:inputType="number"
            android:lines="1"
            android:padding="@dimen/dp_18" />

        <ImageView
            android:id="@+id/clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/btn_search_clean_pre"
            android:visibility="invisible" />
    </RelativeLayout>


    <View
        android:id="@+id/br2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/rl"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br2"
        android:background="#ffffff">


        <EditText
            android:id="@+id/paw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="@dimen/dp_18" />

        <CheckBox
            android:id="@+id/eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:button="@null"
            android:drawableLeft="@drawable/eye_paw"
            android:padding="@dimen/dp_10" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ji_paw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rll"
        android:padding="@dimen/dp_5">

        <CheckBox
            android:id="@+id/jizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="记住密码" />

        <TextView
            android:id="@+id/wangji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_5"
            android:text="忘记密码？" />
    </RelativeLayout>

    <Button
        android:id="@+id/but_denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ji_paw"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/denglu"
        android:text="登录"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/but_denglu"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="短信验证码登录"
            android:textColor="#0079D7" />

        <TextView
            android:id="@+id/yijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            android:text="本机号码一键登录"
            android:textColor="#0079D7" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_35"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sanfang_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/sangfang_qq" />

        <ImageView
            android:id="@+id/sanfang_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/sangfang_weixin" />

        <ImageView
            android:id="@+id/sanfang_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/sangfang_weibo" />
    </LinearLayout>

</RelativeLayout>
