<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FF">

    <RelativeLayout
        android:id="@+id/systemset_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/systemset_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/nav_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#000000"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/br1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/systemset_top" />

    <LinearLayout
        android:id="@+id/dl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您尚未登录，请点击登录" />

        <Button
            android:id="@+id/lijidenglu"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_45"
            android:layout_margin="@dimen/dp_12"
            android:background="@drawable/lijidenglu_button"
            android:text="立即登录"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:id="@+id/br2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/dl" />

    <RelativeLayout
        android:id="@+id/line_wangluo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br2"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许非WiFi网络下缓存视频"
            android:textColor="#000000"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/wangluo_kaiguan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:button="@null"
            android:drawableLeft="@drawable/web_button" />
    </RelativeLayout>

    <View
        android:id="@+id/br3"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/line_wangluo" />

    <RelativeLayout
        android:id="@+id/line_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br3"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/cache_right"
            android:text="0MB" />

        <ImageView
            android:id="@+id/cache_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/grzx_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/br4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/line_cache" />

    <RelativeLayout
        android:id="@+id/line_yijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br4"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="#000000"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/yijian_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/grzx_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/br5"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/line_yijian" />

    <RelativeLayout
        android:id="@+id/line_guanyu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br5"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:textColor="#000000"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/guanyu_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/grzx_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/br6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/line_guanyu" />

    <RelativeLayout
        android:id="@+id/line_tuichu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br6"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退出登录"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>
